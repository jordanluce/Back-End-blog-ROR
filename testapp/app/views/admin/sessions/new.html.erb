	<div class="container">
		<div class="form-signin ">
			<h1 class="text-center">sign in</h1>
			<%= form_tag admin_sessions_path do %>

			<p>
				<%= text_field_tag( :username, nil, :class => 'form-control', :placeholder => 'Your Email') %>
			</p>

			<p>
				<%= password_field_tag( :password, nil,  :class => 'form-control', :placeholder => 'Password' ) %>
			</p>

			<p>
				<%= submit_tag( 'Log in', :class => 'btn btn-success form-control')  %>
			</p>

			<% end %>
			
		</div>

	</div>
